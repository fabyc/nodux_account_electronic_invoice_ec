<?xml version="1.0"?>
<data>
    <xpath expr="/form/notebook/page[@id='payment']" position="after">
        <page string="Facturacion Electronica Ecuador" id="electronic_invoice"
            states="{'invisible': Eval('type').in_(['in_credit_note','anticipo','out_withholding'])}">
            <label name="lote"/>
            <field name="lote"/>
             <newline />
            <label name="estado_sri"/>
            <field name="estado_sri"/>
            <newline />
            <label name="mensaje"/>
            <field name="mensaje"/>
            <newline />
        </page>
    </xpath>

    <xpath expr="/form/notebook/page[@id='invoice']/field[@name='currency']" position="after">
        <newline/>
        <label name="formas_pago_sri"/>
        <field name="formas_pago_sri" xexpand="1"/>
        <newline/>
    </xpath>

</data>
